cmake_minimum_required(VERSION 3.12)
project(data_frame_lib VERSION 1.0.0 DESCRIPTION "Data frame module" LANGUAGES CXX)

set(CMAKE_CXX_STANDARD 17)
set(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} -Wall -Werror -Wpedantic")

set(BOOST_INCLUDE_DIR ${BOOSTPATH}/include)

message(STATUS "Builing the library for the statistics module...")

set(SOURCE_FILES DATA_FRAME.cpp)
set(HEADER_FILES DATA_FRAME.hpp CSV_WRITER.hpp)

add_library(data_frame SHARED ${SOURCE_FILES} ${HEADER_FILES})
target_include_directories(data_frame PUBLIC ${BOOST_INCLUDE_DIR})

install(TARGETS data_frame
	LIBRARY DESTINATION /home/nico/Desktop/TEMPORARY/homework_02.01/Libraries
	PUBLIC_HEADER DESTINATION /home/nico/Desktop/TEMPORARY/homework_02.01/Headers)
	
install(FILES ${HEADER_FILES} DESTINATION /home/nico/Desktop/TEMPORARY/homework_02.01/Headers)

message(STATUS "Dataframe library builded")
