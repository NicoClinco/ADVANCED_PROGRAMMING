CXX=g++

BOOST_PATH=/home/nico/Desktop/PHD-COURSES/libraries/Boost

GSL_PATH=/home/nico/Desktop/PHD-COURSES/libraries/gsl

PYTHON_PATH_LIB=/usr/lib/python3.10/config-3.10-x86_64-linux-gnu/

MATPLOTLIBPP=/home/nico/Desktop/TEMPORARY/matplotplusplus-master/build/source/matplot

MATPLOTNODEUS=/home/nico/Desktop/TEMPORARY/matplotplusplus-master/build/source/3rd_party

CPPFLAGS=-I./data_frame_module -I$(BOOST_PATH)/include \
	     -I$(GSL_PATH)/include -I/usr/include/python3.10 \
	 -I/home/nico/Desktop/TEMPORARY/matplotplusplus-master/source/

CXXFLAGS=-std=c++17 -Wall -Wpedantic


LDFLAGS=-Wl,-rpath,data_frame_module/  \
	-Wl,-rpath,$(BOOST_PATH)/lib   \
	-Wl,-rpath,$(GSL_PATH)/lib     \
	-Wl,-rpath,$(PYTHON_PATH_LIB)  \
	-Wl,-rpath,$(MATPLOTLIBPP)     \
	-Wl,-rpath,$(MATPLOTNODEUS)    \
	-Ldata_frame_module            \
	-L$(BOOST_PATH)/lib            \
	-L$(GSL_PATH)/lib              \
	-L$(PYTHON_PATH_LIB)	       \
	-L$(MATPLOTLIBPP)	       \
	-L$(MATPLOTNODEUS)

LDLIBS=-lDataFrame -lboost_program_options -lgsl -lgslcblas -lpython3.10 -lmatplot -lnodesoup


SRC=main.cpp
OBJ=$(SRC:.cpp=.o)

.PHONY : all clean

all: main

main: $(OBJ)
	$(CXX) $(CXXFLAGS) $^ $(LDFLAGS) $(LDLIBS) -o $@
%.o: %.cpp
	$(CXX) -c $< $(CPPFLAGS) $(CXXFLAGS) -o $@

clean:
	rm -f *.o main
